.article
  background-color white
  .article-content
    background: #740027;
    box-shadow: inset 0px 0px 10em 10px rgba(0,0,0,0.39); 
  .thumb
    transition opacity 1s ease-in-out
    position relative
    width 100%
    height 100vh

  .article-artist
    left 0
    right 0
    margin-left auto
    margin-right auto
    top 71vh
    width 95%
    font-size 7em
    font-weight bold
    color #fff
    text-align center
    position absolute
    letter-spacing 3px

  .article-genre
    left 0
    right 0
    margin-left auto
    margin-right auto
    top 79vh
    width 95%
    font-size 5em
    color #C00000
    text-align center
    font-weight lighter
    position absolute

  .article-pfeil
    left 0
    right 0
    margin-left auto
    margin-right auto
    bottom 5vh
    height 51px
    position absolute

  .article-city
    left 0
    right 0
    margin-left auto
    margin-right auto
    margin-top 80px
    top 0
    width 90%
    font-size 5em
    color white
    text-align center
    position absolute
    a
      text-decoration none
      color white

  .article-city::first-letter
    color #f00
    font-family futura
    font-weight bold
.article-empty
  background-color #000
  color #fff
  width 100vw
  height 100vh
