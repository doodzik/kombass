.thumb
  position fixed
  top -50%
  left -50%
  width 200%
  height 200%
  
  img
    position absolute
    z-index 1
    top 0
    left 0
    right 0
    bottom 0
    margin auto
    min-width 50%
    min-height 50%

.article-artist 
  z-index 2
  position fixed
  color white
  background-color rgba(8, 8, 8, 0.42)
  font-size 80px
  font-weight bold
  left 10%
  top 5%

.article-content 
  padding 5%
  z-index 10
  background-color rgb(244, 244, 244)
  margin-top 100vh
  position relative
  word-break break-word 

