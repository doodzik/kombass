.article
  background-color white
  .thumb
    transition opacity 1s ease-in-out
    position relative
    width 100%
    height 100vh

  .article-artist 
    position absolute
    background-color rgba(0, 0, 0, 0.41)
    color white
    font-size 8em
    top 75%
    left 5%

  .article-content 
    padding 30px 5%

.article-empty
  background-color #000
  color #fff
  width 100vw
  height 100vh
