.segment
  height: 100vh;

.text
  color: #fff;
  font-size: 2.2em;
  padding: 20px;
  line-height: 62px;
  font-weight: lighter;  color white

.teaser
  font-size: 8em;
  word-break: break-word;
  color: white;

.teaser-header
  font-size: 0.6em;
  padding-top 80px
  color: #fff;
  text-align: center;

.teaser-header::first-letter
  color: #f00;
  font-family: futura;
  font-weight: bold;

.teaser-content
  padding-top 5%
  line-height: 122%;
  font-weight: bold;
  padding-left: 2%;

.article-quote
  font-size: 8em;
  display: inline-block;
  color: #fff;
  font-weight: bold;
  font-style: italic;
  box-shadow: inset 0px -62px 0px #019883;
  padding-bottom: 0%;
  line-height: 130%;
  letter-spacing: 3px;
  word-spacing: -3px;

.img-slider
  height 100vh
  .slick-next
    right 0
  .slick-dots
    bottom 45px
    li button
      font-size 5em
    li button::before
        font-size 0.5em
        color #fff
    li.slick-active button::before
      color #fff

.img-unterschrift
  font-size: 2.5em;
  color: white;
  bottom: -80%;
  position: relative;
  .img-desc
    font-weight: normal
    display: inline-block;
    color: #fff;
    font-style: italic;
    box-shadow: inset 0px -62px 0px #019883;
    padding-bottom: 0%;
    line-height: 130%;
    letter-spacing: 3px;
    word-spacing: -3px;

